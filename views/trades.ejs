<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./partials/head %>
</head>
<body>
    <% include ./partials/navbar %>
    <div class="container">
    <h2 class="left-align">My trades</h2>
        <div class="row">
            <div class="col s12">
                <% if(requests.length) {%>
                    <% for(var i=requests.length-1;i>=0;i--){ %>
                        <div class="card">
                            <div class="card-content">  
                                <div class="row">
                               
                                        <div class="col s6">
                                            <h2><%= user.username %> wants to gave:</h2>
                                            <li class="give list-group-item">
                                                <h2><%= requests[i].offeredBook %></h2>
                                                <h5><%= requests[i].offeredBookAuthor %></h5>
                                            </li>
                                        </div>
                                         <div class="col s6">
                                            <h2>and got:</h2>
                                                <li class="take list-group-item">
                                                    <h2><%= requests[i].requestedBook %></h2>
                                                    <h5><%= requests[i].requestedBookAuthor %></h5>
                                                </li>
                                        </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } %>       
            </div>
        </div>
    </div>

</body>
</html>